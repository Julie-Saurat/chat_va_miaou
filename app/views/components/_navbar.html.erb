<div class="navbar navbar-expand-sm navbar-lewagon sticky-top">
  <%= link_to "Chat va miaou", root_path, class: "navbar-brand" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <% if user_signed_in? %>
          <%= link_to new_cat_path, class: "nav-link mr-2" do %>
            <i class='fas fa-plus mr-2'></i>List a new cat
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "nav-link mr-2" do %>
            <i class="fas fa-sign-in-alt"></i> Sign in
          <% end %>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <% if user_signed_in? %>
          <%= image_tag "blue-cat.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Profile",  edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
