<p>Passez du temps avec <%= @cat.name %>!</p>
<%= simple_form_for [@cat, @booking] do |f| %>
  <%= f.input :start_date, as: :string, label: "A partir de :", input_html: {id: "start-date"} %>
  <%= f.input :number_of_half_days, label: "Pour combien de demi-journées ?", input_html: {min: 1, max: 14} %>
  <%= f.input :commitment, label: "Je m'engage fermement à payer si le propriétaire de #{@cat.name} accepte ma demande" , boolean_style: :inline %>
  <%= f.button :submit, value: "A moi les câlins !", class: "btn btn-primary d-block mx-auto" %>
<% end %>
